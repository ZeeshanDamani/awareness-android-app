<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.AboutCoronaActivity"
        android:background="@drawable/bg">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/bt_white_round_background"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <ScrollView
                android:layout_width="match_parent"
               android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginBottom="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <TextView
                        android:id="@+id/label_about_corona"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/label_about_corona"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:gravity="start"
                        android:padding="10dp"
                        android:visibility="visible"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/times_new_roman"
                        />


                    <TextView
                        android:id="@+id/t_about_corona"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/t_about_corona"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/times_new_roman"
                        android:gravity="start"
                        android:padding="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:visibility="visible" />


                    <TextView
                        android:id="@+id/label_how_to_safe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/label_how_to_safe"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:gravity="start"
                        android:padding="10dp"
                        android:visibility="visible"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/times_new_roman"
                        />


                    <TextView
                        android:id="@+id/t_how_to_safe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/t_how_to_safe"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/times_new_roman"
                        android:gravity="start"
                        android:padding="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:visibility="visible" />


                    <TextView
                        android:id="@+id/label_symptoms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/label_symptoms"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:gravity="start"
                        android:padding="10dp"
                        android:visibility="visible"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/times_new_roman"
                        />


                    <TextView
                        android:id="@+id/t_symptoms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/t_symptoms"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/times_new_roman"
                        android:gravity="start"
                        android:padding="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:visibility="visible" />



                    <TextView
                        android:id="@+id/label_who"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/label_who"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:gravity="start"
                        android:padding="10dp"
                        android:visibility="visible"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/times_new_roman"
                        />


                    <TextView
                        android:id="@+id/t_who"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/t_who"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/times_new_roman"
                        android:gravity="start"
                        android:padding="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:visibility="visible" />


                </LinearLayout>

            </ScrollView>






        </androidx.constraintlayout.widget.ConstraintLayout>

        <WebView
            android:id="@+id/about_web_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>