<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    >
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        android:layout_marginVertical="50dp"
        android:fontFamily="sans-serif-black"
        android:text="How can we Help you"
        android:textColor="#2196F3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/about_corona_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="96dp"
        android:height="100dp"
        android:width="100dp"
        android:text="About\nCorona"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/who_guidelines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WHO\nGuideline"
        android:height="100dp"
        android:width="100dp"
        android:layout_marginStart="90dp"
        app:layout_constraintStart_toEndOf="@id/about_corona_button"
        app:layout_constraintTop_toTopOf="@id/about_corona_button" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/not_feel_well"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="100dp"
        android:width="100dp"
        android:text="Not Feeling \nWell"
        android:layout_marginVertical="150dp"
        app:layout_constraintStart_toStartOf="@id/about_corona_button"
        app:layout_constraintTop_toTopOf="@id/about_corona_button"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/emergnecy_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call Safety \n Team"
        android:height="100dp"
        android:width="100dp"
        android:layout_marginVertical="150dp"
        app:layout_constraintStart_toStartOf="@id/who_guidelines"
        app:layout_constraintTop_toTopOf="@id/who_guidelines"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nearest_centers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nearest \n Center"
        android:height="100dp"
        android:width="100dp"
        android:layout_marginVertical="150dp"
        app:layout_constraintStart_toStartOf="@id/not_feel_well"
        app:layout_constraintTop_toTopOf="@id/not_feel_well"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/stay_safe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stay Safe"
        android:height="100dp"
        android:width="100dp"
        android:layout_marginVertical="150dp"
        app:layout_constraintStart_toStartOf="@id/emergnecy_call"
        app:layout_constraintTop_toTopOf="@id/emergnecy_call"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>