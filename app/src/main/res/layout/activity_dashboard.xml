<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        tools:context=".activities.DashboardActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bt_white_round_background"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/label_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/times_new_roman"
            android:gravity="center"
            android:text="How can we help you ?"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/about_corona_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/corona"
            android:width="100dp"
            android:height="100dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_help" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/who_guidelines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:background="@drawable/who"
            android:width="100dp"
            android:height="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/about_corona_button" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/not_feel_well"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="150dp"
            android:width="100dp"
            android:height="100dp"
            android:background="@drawable/feelingsick"
            app:layout_constraintStart_toStartOf="@id/about_corona_button"
            app:layout_constraintTop_toTopOf="@id/about_corona_button" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/emergnecy_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="150dp"
            android:width="100dp"
            android:height="100dp"
            android:background="@drawable/emergency_support"
            app:layout_constraintStart_toStartOf="@id/who_guidelines"
            app:layout_constraintTop_toTopOf="@id/who_guidelines" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nearest_centers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="150dp"
            android:width="100dp"
            android:height="100dp"
            android:background="@drawable/nearby_test"
            app:layout_constraintStart_toStartOf="@id/not_feel_well"
            app:layout_constraintTop_toTopOf="@id/not_feel_well" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/stay_safe"
            android:background="@drawable/staysafe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="150dp"
            android:width="100dp"
            android:height="100dp"
            app:layout_constraintStart_toStartOf="@id/emergnecy_call"
            app:layout_constraintTop_toTopOf="@id/emergnecy_call" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/label_view_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/times_new_roman"
            android:gravity="center"
            android:text="@string/label_view_profile"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginVertical="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>