                    <!--                android:layout_marginBottom="20dp"-->
                    <!--                android:layout_marginStart="10dp"-->
                    <!--                android:layout_marginEnd="10dp"-->
                    <!--                android:paddingStart="10dp"-->
                    <!--                android:singleLine="true"-->
                    <!--                app:layout_constraintTop_toBottomOf="@id/phone_number" />-->


                    <TextView
                        android:id="@+id/label_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/label_email"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:paddingStart="10dp"
                        android:layout_margin="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/phone_number"/>


                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint=""
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/darker_gray"
                        android:fontFamily="@font/times_new_roman"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:paddingStart="10dp"
                        android:singleLine="true"
                        android:background="@drawable/round_border_layout"
                        app:layout_constraintTop_toBottomOf="@id/label_email" />



                    <TextView
                        android:id="@+id/label_old_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/label_old_password"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:paddingStart="10dp"
                        android:layout_margin="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/email"/>


                    <EditText
                        android:id="@+id/old_password"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint=""
                        android:inputType="textPassword"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/darker_gray"
                        android:fontFamily="@font/times_new_roman"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="50dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:paddingStart="10dp"
                        android:singleLine="true"
                        android:background="@drawable/round_border_layout"
                        app:layout_constraintTop_toBottomOf="@id/label_old_password" />


                    <TextView
                        android:id="@+id/label_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/label_new_password"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:paddingStart="10dp"
                        android:layout_margin="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/old_password"/>


                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint=""
                        android:inputType="textPassword"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/darker_gray"
                        android:fontFamily="@font/times_new_roman"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="50dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:paddingStart="10dp"
                        android:singleLine="true"
                        android:background="@drawable/round_border_layout"
                        app:layout_constraintTop_toBottomOf="@id/label_password" />





                    <TextView
                        android:id="@+id/label_new_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/label_confirm_password"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:paddingStart="10dp"
                        android:layout_margin="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/password"/>


                    <EditText
                        android:id="@+id/password_confirmation"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint=""
                        android:inputType="textPassword"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/darker_gray"
                        android:fontFamily="@font/times_new_roman"
                        android:layout_margin="10dp"
                        android:paddingStart="10dp"
                        android:singleLine="true"
                        android:background="@drawable/round_border_layout"
                        app:layout_constraintTop_toBottomOf="@id/label_new_password" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/label_personal_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="start"
                        android:text="@string/label_personal_detail"
                        android:textSize="15sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/times_new_roman"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@+id/password_confirmation" />


                    <RelativeLayout
                        android:id="@+id/R1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:paddingStart="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/label_personal_detail">

                        <TextView
                            android:id="@+id/label_date_of_birth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_date_of_birth"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            android:layout_alignParentStart="true"/>


                        <TextView
                            android:id="@+id/label_required_for_diagonsis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_required_for_diagonsis"
                            android:textSize="15sp"
                            android:textColor="@android:color/darker_gray"
                            android:layout_alignParentEnd="true"/>


                        <EditText
                            android:id="@+id/date_of_birth"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint=""

                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/darker_gray"
                            android:fontFamily="@font/times_new_roman"
                            android:layout_marginTop="10dp"
                            android:paddingStart="10dp"
                            android:singleLine="true"
                            android:background="@drawable/round_border_layout"
                            android:layout_below="@+id/label_date_of_birth"/>




                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/R2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:paddingStart="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/R1">

                        <TextView
                            android:id="@+id/label_cnic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_cnic"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            android:layout_alignParentStart="true"/>


                        <TextView
                            android:id="@+id/label_required_for_diagonsis1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_required_for_diagonsis"
                            android:textSize="15sp"
                            android:textColor="@android:color/darker_gray"
                            android:layout_alignParentEnd="true"/>


                        <EditText
                            android:id="@+id/cnic"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint=""
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/darker_gray"
                            android:fontFamily="@font/times_new_roman"
                            android:layout_marginTop="10dp"
                            android:paddingStart="10dp"
                            android:singleLine="true"
                            android:background="@drawable/round_border_layout"
                            android:layout_below="@+id/label_cnic"/>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/R3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:paddingStart="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/R2">

                        <TextView
                            android:id="@+id/label_gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_gender"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            android:layout_alignParentStart="true"/>


                        <TextView
                            android:id="@+id/label_required_for_diagonsis2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_required_for_diagonsis"
                            android:textSize="15sp"
                            android:textColor="@android:color/darker_gray"
                            android:layout_alignParentEnd="true"/>


                        <EditText
                            android:id="@+id/gender"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint=""
                            android:inputType="textPassword"
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/darker_gray"
                            android:fontFamily="@font/times_new_roman"
                            android:layout_marginTop="10dp"
                            android:paddingStart="10dp"
                            android:singleLine="true"
                            android:background="@drawable/round_border_layout"
                            android:layout_below="@+id/label_gender"/>


                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/R4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:paddingStart="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/R3">

                        <TextView
                            android:id="@+id/label_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_city"
                            android:textSize="15sp"
                            android:textColor="@android:color/black"
                            android:layout_alignParentStart="true"/>


                        <TextView
                            android:id="@+id/label_required_for_diagonsis3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_required_for_diagonsis"
                            android:textSize="15sp"
                            android:textColor="@android:color/darker_gray"
                            android:layout_alignParentEnd="true"/>


                        <Spinner
                            android:id="@+id/city"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint=""
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/darker_gray"
                            android:fontFamily="@font/times_new_roman"
                            android:layout_marginTop="10dp"
                            android:paddingStart="10dp"
                            android:singleLine="true"
                            android:background="@drawable/round_border_layout"
                            android:layout_below="@+id/label_city"/>


                    </RelativeLayout>


                    <Button
                        android:id="@+id/bt_update_details"
                        android:text="@string/label_update_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="17sp"
                        android:fontFamily="@font/times_new_roman"
                        android:layout_marginTop="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="40dp"
                        android:visibility="visible"
                        android:background="@drawable/bt_corner_ripple_effect_bg"
                        app:layout_constraintTop_toBottomOf="@+id/R4"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>


                </androidx.constraintlayout.widget.ConstraintLayout>



            </androidx.constraintlayout.widget.ConstraintLayout>
