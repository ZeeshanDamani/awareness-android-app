<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.ProfileEditActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".activities.SignUpActivity"
                android:background="@android:color/white">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="start"
                        android:text="@string/label_my_profile"
                        android:textSize="30sp"
                        android:textColor="@android:color/black"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/times_new_roman"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/title_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="start"
                        android:text="@string/label_contact_detail"
                        android:textSize="15sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/times_new_roman"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@+id/title" />


                    <TextView
                        android:id="@+id/label_full_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/label_full_name"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:paddingStart="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/title_description"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <EditText
                        android:id="@+id/full_name"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint=""
                        app:layout_constraintTop_toBottomOf="@id/label_full_name"
                        android:textColor="@android:color/black"
                        android:textColorHint="@android:color/darker_gray"
                        android:fontFamily="@font/times_new_roman"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:paddingStart="10dp"
                        android:singleLine="true"
                        android:background="@drawable/round_border_layout"/>



                    <TextView
                        android:id="@+id/label_phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/label_phone_number"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        android:paddingStart="10dp"
                        android:layout_margin="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/full_name"/>

                    <!--            <EditText-->
                    <!--                android:id="@+id/last_name"-->
                    <!--                android:layout_width="match_parent"-->
                    <!--                android:layout_height="wrap_content"-->
                    <!--                android:hint="Last Name"-->
                    <!--                android:textColor="@android:color/black"-->
                    <!--                android:textColorHint="@android:color/darker_gray"-->
                    <!--                android:fontFamily="@font/times_new_roman"-->
