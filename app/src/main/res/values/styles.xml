<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/AppTheme.WindowTransition</item>
    </style>


    <style name="AppTheme.WindowTransition">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>


    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@android:color/black</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="CustomProgressBarTheme">
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="FormLabel">
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#003044</item>
    </style>

    <style name="FormSubLabel" parent="FormLabel">
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#69767B</item>
    </style>

    <style name="FormInput" parent="FormLabel">
        <item name="android:paddingStart">16dp</item>
        <item name="android:background">@drawable/bg_form_input</item>
    </style>

    <style name="FormButton" parent="FormLabel">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bt_corner_ripple_effect_bg</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="FormHeader" parent="FormLabel">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#003044</item>
    </style>

    <style name="DashboardLabel">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#C8D4D9</item>
    </style>

    <style name="DashboardButton">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#003044</item>
        <item name="android:background">@drawable/ic_rectangle2</item>
        <item name="android:height">40dp</item>
    </style>

    <style name="Question">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#003044</item>
    </style>

    <style name="AboutHeading">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AboutParagraph">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>
